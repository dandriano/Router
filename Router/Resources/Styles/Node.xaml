    <!-- Node control styling -->
    <Style TargetType="{x:Type c:NodeControl}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="10,5,10,5"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="VertexShape" Value="Rectangle"/>
        <Setter Property="ShowLabel" Value="True"/>
        <Setter Property="ShowView" Value="False"/>
        <Setter Property="ViewVisibility" Value="Collapsed" />
        <Setter Property="NodeType" Value="{Binding Type}" />
        <Setter Property="NodeBrush" Value="{StaticResource Node.On}" />
        <Setter Property="NodeWarnBrush" Value="{StaticResource Node.Warning.Off}" />
        <Setter Property="NodeWarnBackgroundBrush" Value="{StaticResource Node.Warning.Off}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:NodeControl}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <ContentControl Content="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                ContentTemplate="{TemplateBinding NodeTemplate}" />
                                <graph:VertexLabelControl x:Name="PART_vertexLabel"
                                                          LabelPositionMode="Sides"
                                                          LabelPositionSide="Top"
                                                          Content="{Binding Vertex.Name, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid Grid.Column="1" Visibility="{TemplateBinding ViewVisibility}">
                                <Rectangle Fill="{TemplateBinding Background}" />
                                <StackPanel>
                                    <v:NodeView DataContext="{Binding}" />
                                    <Button Content="ОК" >
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click" >
                                                <i:ChangePropertyAction PropertyName="ShowView" 
                                                                        Value="false"
                                                                        TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=c:NodeControl}}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="graph:HighlightBehaviour.Highlighted" Value="True">
                <Setter Property="BorderBrush" Value="Gold"/>
                <Setter Property="NodeBrush" Value="Gold" />
            </Trigger>

            <Trigger Property="graph:DragBehaviour.IsTagged" Value="True">
                <Setter Property="BorderBrush" Value="Chocolate" />
                <Setter Property="NodeBrush" Value="Chocolate" />
            </Trigger>

            <Trigger Property="ShowView" Value="True">
                <Setter Property="ViewVisibility" Value="Visible"/>
                <Setter Property="NodeWarnBrush" Value="{StaticResource Node.Warning.On}" />
                <Setter Property="NodeWarnBackgroundBrush" Value="{StaticResource Node.Warning.On.Background}" />
            </Trigger>
            
            <Trigger Property="ShowView" Value="False">
                <Setter Property="ViewVisibility" Value="Collapsed"/>
                <Setter Property="NodeWarnBrush" Value="{StaticResource Node.Warning.Off}" />
                <Setter Property="NodeWarnBackgroundBrush" Value="{StaticResource Node.Warning.Off}" />
            </Trigger>

            <Trigger Property="NodeType" Value="Terminal">
                <Setter Property="NodeTemplate" Value="{StaticResource TermNode}" />
            </Trigger>

            <Trigger Property="NodeType" Value="OLA">
                <Setter Property="NodeTemplate" Value="{StaticResource OLANode}" />
            </Trigger>

            <Trigger Property="NodeType" Value="ROADM">
                <Setter Property="NodeTemplate" Value="{StaticResource TermNode}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>