<UserControl x:Class="Router.Views.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Router.ViewModels"
             xmlns:graph="http://schemas.panthernet.ru/graphx/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:GraphViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <Border Name="NewNodeDragSource">
                <StackPanel>
                    <TextBlock Text="New Node" FontSize="11" HorizontalAlignment="Center"/>
                    <Grid>
                        <Ellipse Width="100"
                                 Height="100"
                                 Fill="Transparent"
                                 Stroke="Gray"
                                 StrokeThickness="1"
                                 StrokeDashArray="4 2"
                                 StrokeDashCap="Round" />
                        <Border Width="20"
                                Height="20"
                                CornerRadius="20"
                                BorderBrush="Gray" 
                                BorderThickness="1" 
                                Margin="2,2,0,2" 
                                Padding="0">
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </DockPanel>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" Width="5"/>
        <graph:ZoomControl Grid.Column="2" Name="GraphArea" graph:ZoomControl.ViewFinderVisibility="Collapsed" Content="{Binding}" />
    </Grid>
</UserControl>
